generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phoneNumber    String    @default("9667271155")
  avatar    String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  posts     Post[]
  comments  Comment[]
  
  @@map("users")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String?
  phoneNumber      String    
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  posts       Post[]
  
  @@map("categories")
}

model Post {
  id         String   @id @default(cuid())
  title      String
  phoneNumber    String    @default("9667271155")
  content    String
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Relations
  authorId   String
  author     User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categoryId String?
  category   Category?  @relation(fields: [categoryId], references: [id])
  comments   Comment[]
  
  @@map("posts")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  phoneNumber    String    @default("9667271155")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  authorId  String
  author    User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  postId    String
  post      Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@map("comments")
}

model Message {
  id        String      @id @default(cuid())
  content   String
  phoneNumber    String    @default("9667271155")
  role      MessageRole
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  metadata  Json?

  @@map("messages")
}

enum MessageRole {
  USER
  ASSISTANT
}

model Important {
  id        String   @id @default(cuid())
  content   String
  phoneNumber    String    @default("9667271155")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  metadata  Json?

  @@map("important")
}
